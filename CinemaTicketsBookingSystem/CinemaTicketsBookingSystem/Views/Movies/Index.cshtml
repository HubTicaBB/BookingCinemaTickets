@model IEnumerable<CinemaTicketsBookingSystem.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pb-3">
    @foreach (var movie in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <a asp-action="Details" asp-route-id="@movie.Id" class="card-text">
                        <div class="card border-light mb-3">
                            <img src="@Url.Content(movie.PosterUrl)" class="card-img-top rounded" style="max-width: 100%; height: auto;" />
                            <div class="card-body">
                                <h5 class="card-title text-light" style="min-height: 3rem">@movie.Title</h5>
                                <p class="card-text text-muted">@movie.Director</p>
                                <p class="card-text text-muted">@movie.ReleaseYear</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

