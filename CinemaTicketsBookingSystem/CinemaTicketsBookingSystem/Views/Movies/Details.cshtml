@model CinemaTicketsBookingSystem.Models.Movie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table text-light">
    <tbody>
        <tr>
            <th class="table-img rounded" scope="row"><img src="@Url.Content(Model.PosterUrl)"/></th>
            <td>
                <h4>@Model.Title<span class="text-muted"> (@Model.ReleaseYear)</span></h4>
                <dl>
                    <dd class="text-muted">@Model.Duration.ToString("h'h 'mm'min'") &nbsp; | &nbsp; @Model.Genre.Name</dd>
                    <dd>@Model.Plot<br /></dd>
                    <dd><span class="text-muted">Director:</span> <strong>@Model.Director</strong></dd>
                    <dd>
                        <br />
                        <div class="row">
                            <div class="col-11 col-md-6 pb-1">
                                <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-info form-control btn-square btn-lg">Back to Repertoire</a> &nbsp;
                            </div>
                            <div class="col-11 col-md-6 pb-1">
                                <a asp-controller="Showtimes" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-success form-control btn-square btn-lg">Find Showtimes</a>
                            </div>
                        </div>
                    </dd>
                </dl>
            </td>
        </tr>
    </tbody>
</table>

